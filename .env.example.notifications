# ===========================================
# RestoHub v2.0 - Notifications Environment Variables
# Copy this file to .env.local and fill in your values
# ===========================================

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
# Get these from: Firebase Console → Project Settings → Service Accounts
# Create a service account and generate a new private key

# Firebase Project ID
VITE_FIREBASE_PROJECT_ID=your-project-id

# Firebase Client Email (from service account)
VITE_FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Firebase Private Key (from service account)
# IMPORTANT: Replace \n with actual newlines if copying from JSON file
VITE_FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Firebase API Key (client-side)
VITE_FIREBASE_API_KEY=AIzaSy...

# Firebase Messaging Sender ID
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789

# Firebase App ID
VITE_FIREBASE_APP_ID=1:123456789:web:abc123

# VAPID Key for web push
# Generate with: firebase init hosting
VITE_FIREBASE_VAPID_KEY=BEl62iUYgUivxIkv69yViEuiBIa-Ib9-SkvMeAtA3LF

# ============================================================================
# SUPABASE CONFIGURATION (Already configured in .env.local)
# ============================================================================
# These are already configured - just reference them

# Supabase Project URL
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Public Key
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================================================
# TELEGRAM CONFIGURATION (Already configured in .env)
# ============================================================================

# Telegram Bot Token (from BotFather)
VITE_TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Telegram Group Chat IDs (negative numbers for supergroups)
VITE_TELEGRAM_KITCHEN_CHAT_ID=-1001234567890
VITE_TELEGRAM_SERVICE_CHAT_ID=-1001234567891
VITE_TELEGRAM_BAR_CHAT_ID=-1001234567892
VITE_TELEGRAM_ALL_CHAT_ID=-1001234567893

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================

# Default notification priority (low/normal/high)
VITE_NOTIFICATION_DEFAULT_PRIORITY=normal

# Enable notification sound
VITE_NOTIFICATION_SOUND_ENABLED=true

# Show notification badges
VITE_NOTIFICATION_BADGES_ENABLED=true

# ============================================================================
# HOW TO SET UP FIREBASE
# ============================================================================
# 1. Go to https://console.firebase.google.com/
# 2. Create or select your project
# 3. Add a web app to get API keys
# 4. Go to Project Settings → Service Accounts
# 5. Generate a new private key
# 6. Copy the client_email and private_key here
# 7. Enable Cloud Messaging API in Google Cloud Console
# 8. Add your domain to Firebase Authentication → Authorized domains
